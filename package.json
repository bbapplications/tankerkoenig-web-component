    "dayjs": "^1.8.15",
    "vue": "^2.6.10",
    "vue-slim-tabs": "^0.3.0",
    "vuescroll": "^4.13.1"
  },
  "devDependencies": {
    "@vue/cli-plugin-babel": "^3.10.0",
    "@vue/cli-plugin-eslint": "^3.10.0",
