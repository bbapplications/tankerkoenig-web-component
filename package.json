{
  "name": "tk-web-component",
  "version": "0.1.0",
  "description": "custom web component for modern browsers - using the tankerkönig API - stylable with css vars",
  "autho": "Bruno Bührlen <info@bb-applications.de>",
  "license": "MIT",
  "scripts": {
    "serve": "vue-cli-service serve",
    "build": "vue-cli-service build --target wc --name tk-web-component ./src/components/TkWebComponent.vue",
    "lint": "vue-cli-service lint"
  },
  "dependencies": {
    "axios": "^0.19.0",
    "better-scroll": "^1.15.2",
